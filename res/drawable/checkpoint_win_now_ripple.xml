<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/light_grey"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/mask">
        <shape>
            <corners android:radius="@dimen/rounded_button" />
            <solid android:color="#ff000000" />
        </shape>
    </item>
    <item>
        <selector>
            <item android:state_selected="true">
                <shape>
                    <solid android:color="#ff57c795" />
                    <corners android:radius="@dimen/rounded_button" />
                </shape>
            </item>
            <item android:state_enabled="false">
                <shape>
                    <solid android:color="#fff6f6f6" />
                    <corners android:radius="@dimen/rounded_button" />
                    <stroke android:width="3.0dip" android:color="#ffe1e0e8" />
                </shape>
            </item>
            <item>
                <shape>
                    <corners android:radius="@dimen/rounded_button" />
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="3.0dip" android:color="#ff57c795" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>
