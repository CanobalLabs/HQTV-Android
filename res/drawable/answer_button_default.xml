<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/light_grey"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_selected="true">
                <shape>
                    <solid android:color="@color/hq_purple" />
                    <corners android:radius="@dimen/rounded_button" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/white" />
                    <corners android:radius="@dimen/rounded_button" />
                    <stroke android:width="2.0dip" android:color="@color/border_stroke" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>
