<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/light_grey"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/mask">
        <shape android:shape="oval">
            <solid android:color="#ff000000" />
        </shape>
    </item>
    <item>
        <selector>
            <item android:state_activated="true">
                <shape android:shape="ring" android:thicknessRatio="2.0" android:useLevel="false" android:innerRadius="0.0dip">
                    <solid android:color="#ff6e74ff" />
                </shape>
            </item>
            <item android:state_selected="true">
                <shape android:shape="ring" android:thicknessRatio="2.0" android:useLevel="false" android:innerRadius="0.0dip">
                    <solid android:color="#ff1f2253" />
                    <stroke android:width="3.0dip" android:color="#ff6e74ff" />
                </shape>
            </item>
            <item android:state_enabled="false">
                <shape android:shape="ring" android:thicknessRatio="2.0" android:useLevel="false" android:innerRadius="0.0dip">
                    <solid android:color="#ff4e51b4" />
                </shape>
            </item>
            <item>
                <shape android:shape="ring" android:thicknessRatio="2.0" android:useLevel="false" android:innerRadius="0.0dip">
                    <solid android:color="#ff36399a" />
                    <stroke android:width="3.0dip" android:color="#ff6e74ff" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>
